@model JobBoard.Models.Applicant.AddApplicantViewModel

@{
    ViewData["Title"] = "Add Applicant";
}

<h1>Enter Your Details</h1>

<form asp-action="AddApplicant" method="post" enctype="multipart/form-data"> 
    <div class="form-group">
        <label asp-for="FullName">Full Name:</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Email">Email:</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber">Phone Number:</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DOB">Date of Birth:</label>
        <input asp-for="DOB" type="date" class="form-control" value="@DateTime.Now.ToString("dd-MM-yyyy")">
        <span asp-validation-for="DOB" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Gender" class="form-label"></label>
        <select asp-for="Gender" class="form-control">
            <option value="">Select State</option>  
            @foreach (var gender in Enum.GetValues(typeof(JobBoard.Data.Enum.Gender)))
            {
                <option value="@gender">@gender</option> 
            }
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>


    <div class="mb-3">
        <label asp-for="StateId" class="form-label"></label>
        <select asp-for="StateId" class="form-control">
            <option value="" selected hidden disabled>Select State</option>
            @foreach (var state in Model.States)
            {
                <option value="@state.Value">@state.Text</option>
            }
        </select>
        <span asp-validation-for="StateId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CVPath">CV:</label>
        <input type="file" asp-for="CVPath" class="form-control" />
        <span asp-validation-for="CVPath" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CoverLetterPath">Cover Letter:</label>
        <input type="file" asp-for="CoverLetterPath" class="form-control" />
        <span asp-validation-for="CoverLetterPath" class="text-danger"></span>
    </div>
    <div>
        <button type="submit" class="btn btn-success">Submit Details </button>
    </div>
    
</form>    
